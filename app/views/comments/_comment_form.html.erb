<% unless current_user.is_a? GuestUser %>
	<%= form_for @comment, url: '#' do |f| %>
		<div class="form-group">
			<%= f.label :content %>
			<%= f.text_area :content, class: 'form-control', placeholder: 'Comment....'%>
		</div>
		<%= f.submit 'Post', class: 'btn btn-sm btn-warning' %> 
		<hr>
	<% end %>
<% end %>