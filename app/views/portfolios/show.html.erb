<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '600px', height: '400px' %>
      </div>

        <div class="col-md-5">
        <h1><%= @portfolio_item.title %></h1>

        <hr>

        <em><%= @portfolio_item.subtitle %></em>

        <p><%= @portfolio_item.body %></p>

        <hr>

        <h3>Technologies Used:</h3>

        <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
        <% end %>

         <% if logged_in?(:site_admin) %>
          <div class="">
           <br/>
            <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-sm btn-warning' %>
            <%= link_to "Delete", portfolio_url, method: :delete, data: { confirm: "You Sure?" }, class: 'btn btn-sm btn-warning' %>
          </div>
        <% end %>
    </div>
  </div>
</div>
