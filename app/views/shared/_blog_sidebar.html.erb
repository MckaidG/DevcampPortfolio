<div class="col-sm-3 offset-sm-1 blog-sidebar">
  <div class="sidebar-module sidebar-module-inset">
    <h4 class= "sidebar-title">Favorite Language</h4>
    <hr>
    <p class= "sidebar-title"><%= image_tag "ruby-logo.png", width: 130, height: 130, alt: "avatar", class: 'img' %></p>
      <div class= 'sidebar-title'>Ruby</div>
  </div>


  <%= source_helper("alert alert-info blog-sidebar-source") %>

  <div class="sidebar-module">
    <h4 class= "sidebar-title">Topics</h4>
    <hr>
    <% @side_bar_topics.each do |topic| %>
      <p><%= link_to topic.title, topic_path(topic), class: 'btn btn-secondary btn-block topic-links'%></p>
    <% end %>
  </div>

  <div class="sidebar-module">
    <h4 class= "sidebar-title">Elsewhere</h4>
    <hr>
    <ol class="list-unstyled social-links">
      <li class="icons"><a href="https://github.com/" target= "_blank"><%= fa_icon "github" %></a></li>
      <li class="icons"><a href="https://www.instagram.com/?hl=en" target= "_blank"><%= fa_icon "instagram" %></a></li>
      <li class="icons"><a href="https://www.facebook.com/" target= "_blank"><%= fa_icon "facebook" %></a></li>
      <li class="icons"><a href="https://twitter.com/" target= "_blank"><%= fa_icon "twitter" %></a></li>
    </ol>
  </div>
</div>
